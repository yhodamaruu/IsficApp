<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@drawable/backg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginStdActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="8dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/isfic_about"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/th"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="Welcome to MyISFIC"
                        android:textSize="25sp"
                        android:padding="12dp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/emailtxt"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="12dp"
                        android:padding="8dp"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/baseline_email_24"
                        android:drawableTint="@color/blue"
                        android:textColorHint="@color/gray"
                        android:background="@drawable/rounded_textfield_background"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/blue"
                        android:hint="Adresse Email Scolaire"/>

                    <EditText
                        android:id="@+id/passwordtxt"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="12dp"
                        android:padding="8dp"
                        android:drawablePadding="4dp"
                        android:drawableStart="@drawable/round_lock_black"
                        android:drawableTint="@color/blue"
                        android:textColorHint="@color/gray"
                        android:background="@drawable/rounded_textfield_background"
                        android:inputType="textPassword"
                        android:textColor="@color/blue"
                        android:hint="Mot de passe"/>

                    <TextView
                        android:id="@+id/mdp_forgot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Mot de passe oubliÃ©"
                        android:textColor="@color/blue" />

                    <Button
                        android:id="@+id/loginbtn"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_margin="12dp"
                        android:clickable="true"
                        android:background="@drawable/btn_background_from"
                        android:text="Connexion"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:layout_gravity="center"
                        android:layout_margin="10dp"
                        android:text="Vous n'avez pas de compte ?"
                        android:gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="12dp"
                    android:background="@drawable/btn_corner"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/more_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="S'inscrire"
                        android:textColor="@color/blue" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="12dp"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="end|center"
                        android:text="Besoin d'aide ? " />



                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:gravity="start|center"
                        android:text="Obtenir de l'aide " />

                </LinearLayout>



            </LinearLayout>

            </ScrollView>

        </LinearLayout>



    </LinearLayout>
