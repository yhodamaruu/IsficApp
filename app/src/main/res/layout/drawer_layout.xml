<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/secret_btn"
                android:layout_margin="4dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/th"/>

            <SearchView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:background="@drawable/corned_texfiled"
                android:layout_margin="8dp"/>
            <ImageButton
                android:id="@+id/settings_btn"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                app:tint="@color/blue"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_school_24"/>
        </LinearLayout>


    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uid"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#7B7BF2"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon profil"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_account_circle_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verifier STD.UID"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_verified_user_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="@color/gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Menu principal"
                android:padding="8dp"
                android:textStyle="bold"
                android:textColor="#7B7BF2"/>
            <LinearLayout
                android:id="@+id/student_collect"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Collect"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_school_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Base de données élèves..."
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Documents"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_upload_file_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Demander ses documents officiels..."
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:id="@+id/notesbook"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NoteBook"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_sticky_note_2_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prise de notes intelligentes"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sondages"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_assignment_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Donner son avis sur des sujets spécifiques"
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="RP .doc"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_insert_drive_file_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Télécharger des ressources pédagogiques..."
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/fonctions_utl"
                android:layout_width="match_parent"
                android:padding="8dp"
                android:background="@drawable/ripple_layout"
                android:clickable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fonctions utiles"
                    android:textStyle="bold"
                    android:drawableStart="@drawable/baseline_insert_drive_file_24"
                    android:gravity="center|start"
                    android:drawablePadding="4dp"
                    android:drawableTint="@color/red"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Télécharger des ressources pédagogiques..."
                    android:textSize="14sp"
                    android:padding="4dp"
                    android:textColor="@color/gray"/>

            </LinearLayout>
        </LinearLayout>


    </ScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="8dp"
        android:orientation="horizontal"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/admin"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/login_admin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion ADMIN"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/red"
                android:drawableTint="@color/white"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/normallayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Déconnexion"
                android:drawableEnd="@drawable/baseline_logout_24"
                android:layout_marginEnd="5dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/red"
                android:drawableTint="@color/white"/>
            <Button
                android:id="@+id/about_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A propos"
                android:layout_gravity="center"
                android:drawableTint="@color/white"
                android:drawableEnd="@drawable/baseline_help_24"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>