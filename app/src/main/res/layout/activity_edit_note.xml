<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".utils.cv.EditNote">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/save_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/round_arrow_back_24"
            app:tint="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <EditText
            android:id="@+id/note_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sans Titre"
            android:background="@drawable/rounded_textfield_background"
            android:backgroundTint="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="19sp"/>
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/voice_record_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/baseline_mic_none_24"
            app:tint="@color/black"
            android:background="?attr/selectableItemBackgroundBorderless"/>

    </LinearLayout>
    <EditText
        android:id="@+id/note_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:hint="Contenu de la note"
        android:gravity="top|start"/>

</LinearLayout>