<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#F4F2F2"
    android:background="@drawable/bottom_sheet_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
        <View
            android:layout_width="50dp"
            android:background="@drawable/card"
            android:backgroundTint="#8D8DFF"
            android:layout_height="8dp"/>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:id="@+id/create_account"
        android:text="Créer un Compte ISFIC"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="8dp"
        android:elevation="1dp"
        android:drawableEnd="@drawable/googleg_standard_color_18"
        android:drawablePadding="8dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:text="S'inscrire avec Google"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signaler un problème"
            android:textColor="@color/gray"
            android:drawableTint="@color/gray"
            android:background="?attr/selectableItemBackground"
            android:textStyle="bold"
            android:clickable="true"
            android:drawableStart="@drawable/baseline_report_gmailerrorred_24"/>

    </LinearLayout>
</LinearLayout>